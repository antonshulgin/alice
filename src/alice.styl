@keyframes blink
	0%   { opacity: 0.6; }
	50%  { opacity: 0.4; }
	100% { opacity: 0.6; }


@keyframes blonk
	0%   { opacity: 1;   letter-spacing: 0rem; }
	33%  { opacity: 0.6; letter-spacing: 0.1rem; }
	100% { opacity: 1;   letter-spacing: 0rem; }


:root
	--fg-hsl        0,   0%,  100%
	--bg-hsl        0,   0%,  0%
	--accent-hsl    350, 80%, 50%
	--accent-fg-hsl 0,   0%,  100%

	--threat-none-hsl   220, 50%,  40%
	--threat-low-hsl    120, 50%,  40%
	--threat-medium-hsl 40,  100%, 40%
	--threat-high-hsl   0,   100%, 40%

	--threat-none-fg-hsl   0, 0%, 100%
	--threat-low-fg-hsl    0, 0%, 100%
	--threat-medium-fg-hsl 0, 0%, 100%
	--threat-high-fg-hsl   0, 0%, 100%

	--fg        @css { hsl(var(--fg-hsl)) }
	--bg        @css { hsl(var(--bg-hsl)) }
	--accent    @css { hsl(var(--accent-hsl)) }
	--accent-fg @css { hsl(var(--accent-fg-hsl)) }

	--threat-none   @css{ hsl(var(--threat-none-hsl)) }
	--threat-low    @css{ hsl(var(--threat-low-hsl)) }
	--threat-medium @css{ hsl(var(--threat-medium-hsl)) }
	--threat-high   @css{ hsl(var(--threat-high-hsl)) }

	--threat-none-fg   @css{ hsl(var(--threat-none-fg-hsl)) }
	--threat-low-fg    @css{ hsl(var(--threat-low-fg-hsl)) }
	--threat-medium-fg @css{ hsl(var(--threat-medium-fg-hsl)) }
	--threat-high-fg   @css{ hsl(var(--threat-high-fg-hsl)) }

	--militia-caldari-hsl  220, 80%, 60%
	--militia-minmatar-hsl 10,  80%, 60%
	--militia-amarr-hsl    60,  80%, 60%
	--militia-gallente-hsl 160, 80%, 60%


	--border-radius 0.1rem

	--animation-blink blink 0.5s infinite ease
	--animation-blonk blonk 0.5s infinite ease

*
	-webkit-tap-highlight-color transparent
	box-sizing                  border-box


html
	background-color var(--bg)
	color            var(--fg)
	display          flex
	font-family      sans-serif
	font-size        10pt
	font-weight      400
	justify-content  center


a
	color           inherit
	font            inherit
	outline         0
	text-decoration underline


p
	line-height 1.25
	margin      0.5rem 0

	&:first-child { margin-top:    0; }
	&:last-child  { margin-bottom: 0; }


.animation-blink { animation: var(--animation-blink); }
.animation-blonk { animation: var(--animation-blonk); }


.hidden
	display none


.busy
	animation        var(--animation-blink)
	background-color inherit !important
	color            inherit !important
	cursor           auto
	pointer-events   none


#View
	display         flex
	height          100vh
	justify-content center
	margin          auto
	overflow        auto
	padding         0
	width           100vw


#Controls
	display   flex
	flex-flow column
	left      0
	min-width 20rem
	padding   3rem
	position  sticky
	top       0


#Overview
	align-self flex-start
	flex-grow  1
	max-width  80rem
	min-width  60rem
	padding    3rem 3rem 3rem 0


@import('./features/**/*')
